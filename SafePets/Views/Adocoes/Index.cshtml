@{
    ViewData["Title"] = "Relatórios Adoções";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="ConsultaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group col-md-6">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label for="maxDate">Data Final</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="ConsultaAgrupada">
            <fieldset>
                <legend>Busca Agrupada</legend>
                <div class="form-group col-md-6">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label for="maxDate">Data Final</label>
                    <input type="date" name="maxDate" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>