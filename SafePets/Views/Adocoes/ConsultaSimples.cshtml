@model IEnumerable<SafePets.Models.Adocao>

@{
    ViewData["Title"] = "Consulta Simples";
}

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group col-md-6">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />                    
                </div>  
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </div>           
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Pessoa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataAdocao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pet.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataAdocao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="panel-heading">
            <h4 class="panel-title">Total de Adoções = @Model.Count().ToString()</h4>
        </div>
    </div>
</div>
