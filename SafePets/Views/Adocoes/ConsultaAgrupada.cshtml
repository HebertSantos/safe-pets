@model IEnumerable<IGrouping<Pessoa, Adocao>>

@{
    ViewData["Title"] = "Consulta Agrupada";
    DateTime minDate = DateTime.Parse(ViewData["minDate"] as string);
    DateTime maxDate = DateTime.Parse(ViewData["maxDate"] as string);
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group col-md-6">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </div>
        </form>
    </div>
</nav>

@foreach (var pessoaGroup in Model)
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@pessoaGroup.Key.Nome</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>
                            Pet
                        </th>
                        <th>
                            Raça
                        </th>
                        <th>
                            Idade
                        </th>
                        <th>
                            DataAdocao
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in pessoaGroup)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pet.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pet.Raca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pet.Idade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataAdocao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}