@model SafePets.Models.Pessoa;

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Pessoa</h4>
<hr />
<form asp-action="Create">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Nome">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Cpf">CPF</label>
            <input asp-for="Cpf" class="form-control" placeholder="Ex.: 000.000.000-00">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nome">RG</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex.: 00.000.000-0">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="DataNascimento">Data de Nascimento</label>
            <input asp-for="DataNascimento" class="form-control" placeholder="Ex.: 00/00/0000">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Endereco">Endereço</label>
        <input asp-for="Endereco" class="form-control" placeholder="Rua dos Bobos, nº 0">
    </div>
    <div class="form-group">
        <label asp-for="Bairro">Bairro</label>
        <input asp-for="Bairro" class="form-control">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Cidade">Cidade</label>
            <input asp-for="Cidade" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Estado">Estado</label>
            <select asp-for ="Estado" class="form-control">
                <option selected>Escolher...</option>
                <option>...</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Cep">CEP</label>
            <input asp-for="Cep" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>