@model SafePets.Models.Pessoa;

@{
    ViewData["Title"] = "Editar Cadastro de Pessoas";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Cpf">CPF</label>
            <input id="txtCPF" asp-for="Cpf" class="form-control">
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Rg">RG</label>
            <input id="txtRG" asp-for="Rg" class="form-control">
            <span asp-validation-for="Rg" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="DataNascimento">Data de Nascimento</label>
            <input asp-for="DataNascimento" class="form-control" placeholder="Ex.: 00/00/0000">
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-10">
            <label asp-for="Endereco">Endereço</label>
            <input asp-for="Endereco" class="form-control" placeholder="Rua dos Bobos">
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Numero">Nº</label>
            <input asp-for="Numero" class="form-control" placeholder="100">
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Bairro">Bairro</label>
        <input asp-for="Bairro" class="form-control">
        <span asp-validation-for="Bairro" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Cidade">Cidade</label>
            <input asp-for="Cidade" class="form-control">
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Estado">Estado</label>
            <select asp-for="Estado" class="form-control">
                <option selected>AC</option>
                <option>AL</option>
                <option>AP</option>
                <option>AM</option>
                <option>BA</option>
                <option>CE</option>
                <option>DF</option>
                <option>ES</option>
                <option>GO</option>
                <option>MA</option>
                <option>MT</option>
                <option>MS</option>
                <option>MG</option>
                <option>PA</option>
                <option>PB</option>
                <option>PR</option>
                <option>PE</option>
                <option>PI</option>
                <option>RJ</option>
                <option>RN</option>
                <option>RS</option>
                <option>RO</option>
                <option>RR</option>
                <option>SC</option>
                <option>SP</option>
                <option>SE</option>
                <option>TO</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Cep">CEP</label>
            <input id="txtCEP" asp-for="Cep" class="form-control">
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="exemplo@exemplo.com.br">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Telefone">Celular</label>
            <input id="txtTEL" asp-for="Telefone" class="form-control" placeholder="Ex.: (00) 00000-0000">
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>
    <div>
        <button type="submit" value="Save" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</form>


@section Scripts {
    <script>
        $('#txtCPF').mask('000.000.000-00', { placeholder: "___.___.___-__" });
        $('#txtRG').mask('00.000.000-0', { placeholder: "__.___.___-_" });
        $('#txtCEP').mask('00000-000');
        $('#txtTEL').mask('(00) 00000-0000');
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
