@model IEnumerable<SafePets.Models.Adocao>


@{
    ViewData["Title"] = "Adoções";
}

<h2>Listagem de Adoções</h2>

<p>
    <a asp-action="Create" class="btn btn-dark">Nova Adoção</a>
    <div class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Pesquisar Adoções">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Pesquisar</button>
    </div>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAdocao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pet.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAdocao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" class=" btn btn-danger" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

