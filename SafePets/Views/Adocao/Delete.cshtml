@model SafePets.Models.Adocao
@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja deletar essa Adoção ? </h3>

<div>
    <h4>Adoção</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pet)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pet.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataAdocao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataAdocao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>

